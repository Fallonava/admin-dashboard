generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum DoctorStatus {
  BUKA
  PENUH
  OPERASI
  CUTI
  SELESAI
  AKAN_BUKA
  TIDAK_PRAKTEK @map("TIDAK PRAKTEK")
}

enum LeaveType {
  Sakit
  Liburan
  Pribadi
  Konferensi
  Lainnya
}

enum AlertLevel {
  Information
  Warning
  Critical
}

enum TargetZone {
  All_Zones  @map("All Zones")
  Lobby_Only @map("Lobby Only")
  ER_Wards   @map("ER & Wards")
}

model Doctor {
  id                 String       @id @default(cuid())
  name               String
  specialty          String
  status             DoctorStatus @default(BUKA)
  image              String?
  category           String
  startTime          String // Format: HH:MM
  endTime            String // Format: HH:MM
  queueCode          String
  lastCall           String? // Format: HH:MM
  registrationTime   String? // Format: HH:MM
  lastManualOverride BigInt? // UNIX timestamp

  shifts        Shift[]
  leaveRequests LeaveRequest[]
}

model Shift {
  id               String   @id @default(cuid())
  dayIdx           Int
  timeIdx          Int
  title            String
  color            String
  formattedTime    String?
  registrationTime     String?
  extra                String?
  disabledDates        String[]
  statusOverride       DoctorStatus?

  doctorId String
  doctor   Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
}

model LeaveRequest {
  id        String    @id @default(cuid())
  specialty String?
  type      LeaveType
  startDate DateTime
  endDate   DateTime
  reason    String?
  status    String
  avatar    String?

  doctorId String
  doctor   Doctor @relation(fields: [doctorId], references: [id], onDelete: Cascade)
}

model BroadcastRule {
  id         String     @id @default(cuid())
  message    String
  alertLevel AlertLevel
  targetZone TargetZone
  duration   Int
  active     Boolean
}

model AutomationRule {
  id        String   @id @default(cuid())
  name      String
  condition Json // arbitrary condition object
  action    Json // arbitrary action object
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AutomationLog {
  id        String   @id @default(cuid())
  type      String
  details   Json?
  createdAt DateTime @default(now())
}

model Settings {
  id                String   @id @default("1")
  automationEnabled Boolean  @default(false)
  runTextMessage    String?
  emergencyMode     Boolean? @default(false)
  customMessages    Json?
}
